/* pages/cart/cart.wxss */
page {
    font-size: 30rpx;
}

/* 商品列表项基本长度配置  50 + 200 + 25*2 + 400 = 700.*/
.cart-product-item {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
}

.cart-product-item .product-checkbox {
  width: 50rpx;
  height: 50rpx;
  margin-top: 75rpx;
}

.cart-product-item .product-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 25rpx;
}

.cart-product-item .product-count-view {
  width: 400rpx;
  position: relative;
}


/* 商品信息和操作图标排列样式*/
.product-info {
  position: relative
}
.product-info .product-price{
  position: absolute;
  right: 0;
  top: 0;
}

.product-count-operation {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.product-count-operation .down-count, 

.product-count-operation .up-count {
  width: 100rpx;
  color: #000;
  display: inline-block;
  font-size: larger;
}

.product-count-operation .show-count{
  width: 100rpx;
  color: #000;
  display: inline-block;
}

.product-count-operation .delete-icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  bottom: 10rpx;
}




/*统计商品信息的固定栏样式*/
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background-color: #ab956d;
  padding: 20rpx;
  line-height: 50rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.cart-footer image{
  width: 50rpx;
  height: 50rpx;
}

.cart-footer text {
  width: 100rpx;
}

.cart-footer .total-number{
  width: 200rpx;
}

.cart-footer .total-price{
  width: 250rpx;
}

/*购物车空的*/
.empty-cart {
  padding-top: 40rpx;
  font-size: small;
  text-align: center;
  color: #ccc;
}