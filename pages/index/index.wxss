/**index.wxss**/
.image-swiper {
  height: 420rpx;
}
.image-swiper image{
  width: 100%;
  height: 100%;
}

/**主题展示区**/
.topic-view {
  display: flex;
  flex-direction: column;
}

.topic-name-view, .product-name-view {
  color: #AB956D;
  text-align: center;
  margin: 20rpx 0;
}

.topic-content-top-view {
  display: flex;
  flex-direction: row;
}
.topic-content-bottom-view image {
  width: 100%;
}

/**最新商品缩略图展示区**/
.product-content-view{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.product-thumbnail{
  width: 351rpx;
  text-align: center;
  color: #000;
  border: 2rpx solid #f5f6f5;
  border-radius: 20rpx;
  background-color: #f5f6f5;
  margin: 10rpx;
  padding: 20rpx 0;
}

.product-thumbnail image{
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx 0;
}